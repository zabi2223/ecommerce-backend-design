<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NextCart</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href="/CSS/style.css" rel="stylesheet">
</head>

<body class="bg-gray-50">

    <!-- Header -->
    <header class="bg-white shadow-sm border-b">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">

                <!-- Logo -->
                <div class="flex items-center">
                    <a href="/user" class="text-2xl font-bold text-blue-600 hover:text-blue-800 flex items-center">
                        <i class="fas fa-box mr-2"></i>
                        NextCart
                    </a>
                </div>

                <!-- Search Bar (centered) -->
                <div class="flex-1 flex justify-center relative max-w-md">
                    <input type="text" placeholder="Search products by name or brand..."
                        class="w-full px-3 py-1.5 text-sm border border-gray-300 rounded-md pr-8 focus:outline-none focus:ring-2 focus:ring-blue-500"
                        id="search-input" />

                    <div id="search-results"
                        class="absolute left-0 top-full mt-1 bg-white border w-full rounded shadow-md z-50 text-sm max-h-48 overflow-y-auto hidden">
                    </div>
                </div>




                <!-- User Actions -->
                <% if (user) { %>
                    <div class="flex items-center space-x-4 relative">
                        <!-- Profile Dropdown -->
                        <div class="relative">
                            <button id="profileBtn"
                                class="text-gray-600 hover:text-blue-600 flex items-center space-x-1 focus:outline-none">
                                <i class="fas fa-user text-lg"></i>
                            </button>

                            <!-- Dropdown Menu -->
                            <div id="profileDropdown"
                                class="hidden absolute right-0 mt-2 w-40 bg-white border rounded shadow-lg z-50">
                                <a href="/user/profile" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">My
                                    Profile</a>
                                <a href="/user/orders" class="block px-4 py-2 text-gray-700 hover:bg-gray-100">My
                                    Orders</a>
                                <a href="/user/logout"
                                    class="block px-4 py-2 text-gray-700 hover:bg-gray-100">Logout</a>
                            </div>
                        </div>

                        <!-- Cart Button -->
                        <button class="text-gray-600 hover:text-blue-600 relative" onclick="toggleCart()">
                            <i class="fas fa-shopping-cart text-lg"></i>
                            <span id="cart-count"
                                class="absolute -top-2 -right-2 bg-orange-500 text-white text-xs rounded-full h-5 w-5 flex items-center justify-center <%= cart && cart.length > 0 ? '' : 'hidden' %>">
                                <%= cart && cart.length> 0 ? cart.length : 0 %>
                            </span>
                        </button>
                    </div>
                    <% } else { %>
                        <div class="space-x-4">
                            <a href="/user/login" class="text-blue-600 font-medium hover:underline">Login</a>
                            <a href="/user/signup"
                                class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition">Register</a>
                        </div>
                        <% } %>
            </div>
        </div>

        <!-- Navigation -->
        <div class="bg-gray-50 border-t">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between h-12">
                    <nav class="flex space-x-8">
                        <a href="../user/category" class="text-gray-700 hover:text-blue-600 font-medium">All
                            Categories</a>
                        <a href="#" class="text-gray-700 hover:text-blue-600">About Us</a>
                        <a href="#" class="text-gray-700 hover:text-blue-600">Help</a>
                    </nav>
                    <div class="flex items-center space-x-4">
                        <span class="text-sm text-gray-600">English, USD</span>
                        <span class="text-sm text-gray-600">Ship to</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex gap-8">

            <!-- Sidebar -->
            <aside class="w-64">
                <div class="bg-white rounded-lg shadow p-6">
                    <h3 class="font-semibold text-gray-900 mb-4">Categories</h3>
                    <nav class="space-y-2">
                        <% categories.forEach(cat=> { %>
                            <a href="/user/product/<%= cat._id %>"
                                class="flex items-center text-gray-700 hover:text-blue-600 hover:bg-blue-50 p-2 rounded">
                                <i class="fas fa-tag mr-2 text-sm"></i>
                                <%= cat.name %>
                            </a>
                            <% }) %>
                    </nav>
                </div>
            </aside>

            <!-- Main Content Area -->
            <div class="flex-1">
                <!-- Hero Banner -->
                <div class="hero-gradient rounded-lg p-8 text-white mb-8">
                    <div class="flex items-center justify-between">
                        <div>
                            <h2 class="text-3xl font-bold mb-2">Next Cart</h2>
                            <p class="text-gray-200 text-lg mb-4">Stay ahead with the latest trends and top-rated
                                products.</p>
                            <button class="bg-white text-blue-600 px-6 py-2 rounded-lg font-medium hover:bg-gray-100"
                                onclick="location.href='/user/category'">
                                Explore
                            </button>
                        </div>
                        <div class="text-center">
                            <div class="bg-white bg-opacity-20 rounded-lg p-4">
                                <p class="text-sm mb-2">Hi, <%= user ? user.name : 'Guest' %>
                                </p>
                                <p class="text-sm mb-3">Let's get started</p>
                                <% if (!user) { %>
                                    <button
                                        class="bg-orange-500 hover:bg-orange-600 px-4 py-2 rounded text-sm font-medium mb-2">
                                        Join Now
                                    </button>
                                    <div>
                                        <a href="../user/login"
                                            class="text-white hover:text-gray-200 underline text-sm">Log in</a>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Deals Section -->
                <div class="mt-8 mb-6">
                    <div class="mt-8 deals-timer shadow-md bg-blue-600 rounded-lg p-4">
                        <div class="flex flex-col md:flex-row md:items-center md:justify-between text-white">
                            <h4 class="text-xl font-semibold mb-4 md:mb-0">ðŸ”¥ Deals and Offers</h4>
                            <div class="flex justify-center gap-8 text-center">
                                <div>
                                    <div id="days" class="text-3xl font-bold leading-tight">04</div>
                                    <div class="text-sm uppercase tracking-wider opacity-90">Days</div>
                                </div>
                                <div>
                                    <div id="hours" class="text-3xl font-bold leading-tight">23</div>
                                    <div class="text-sm uppercase tracking-wider opacity-90">Hour</div>
                                </div>
                                <div>
                                    <div id="minutes" class="text-3xl font-bold leading-tight">57</div>
                                    <div class="text-sm uppercase tracking-wider opacity-90">Min</div>
                                </div>
                                <div>
                                    <div id="seconds" class="text-3xl font-bold leading-tight">53</div>
                                    <div class="text-sm uppercase tracking-wider opacity-90">Sec</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recommended Products -->
                <div class="grid grid-cols-5 gap-2 mb-6" id="recommended-products"></div>

                <!-- Home & Outdoor -->
                <!-- Category Blocks -->
                <% categoryBlocks.forEach(cat=> { %>
                    <div class="bg-white rounded-lg shadow p-6 mb-8">
                        <div class="flex items-center justify-between mb-6">
                            <h3 class="text-xl font-semibold">
                                <%= cat.name %>
                            </h3>
                            <a href="/user/product/<%= cat._id %>" class="text-blue-600 hover:underline font-medium">See
                                More</a>
                        </div>

                        <div class="grid grid-cols-4 gap-6">
                            <% cat.products.slice(0,4).forEach(product=> { %>
                                <div class="border rounded-lg p-4 hover:shadow-lg transition">
                                    <img src="/user/product/image/<%= product._id %>"
                                        class="h-40 w-full object-cover mb-3 rounded" />
                                    <h4 class="font-medium text-gray-800 truncate">
                                        <%= product.name %>
                                    </h4>
                                    <p class="text-blue-600 font-semibold mt-1">Rs:
                                        <%= product.price %>
                                    </p>
                                    <button
                                        class="mt-3 w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700">Add to
                                        Cart</button>
                                </div>
                                <% }) %>
                        </div>
                    </div>
                    <% }) %>


            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white mt-16">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
            <div class="text-center mb-12">
                <h3 class="text-xl font-semibold mb-2">Subscribe on our newsletter</h3>
                <p class="text-gray-400 mb-6">Get daily news on upcoming offers from many suppliers all over the world
                </p>
                <div class="flex max-w-md mx-auto">
                    <input type="email" placeholder="Email" class="flex-1 px-4 py-2 rounded-l-lg border-0 text-gray-900"
                        id="newsletter-email" />
                    <button class="bg-blue-600 hover:bg-blue-700 px-6 py-2 rounded-r-lg"
                        onclick="subscribeNewsletter()">
                        Subscribe
                    </button>
                </div>
            </div>

            <div class="grid grid-cols-1 md:grid-cols-5 gap-8">
                <div>
                    <h4 class="font-semibold mb-4">NextCart</h4>
                    <p class="text-sm text-gray-400">NextCart is a user-friendly Ecommerce platform offering seamless
                        online
                        shopping with a wide range of products and secure checkout.</p>
                </div>
                <div>
                    <h4 class="font-semibold mb-4">About</h4>
                    <a href="#" class="block hover:text-white text-sm text-gray-400">About Us</a>
                    <a href="#" class="block hover:text-white text-sm text-gray-400">Find Store</a>
                    <a href="#" class="block hover:text-white text-sm text-gray-400">Blogs</a>
                </div>
                <div>
                    <h4 class="font-semibold mb-4">Information</h4>
                    <a href="#" class="block hover:text-white text-sm text-gray-400">Help Center</a>
                    <a href="#" class="block hover:text-white text-sm text-gray-400">Shipping Track</a>
                    <a href="#" class="block hover:text-white text-sm text-gray-400">Contact Us</a>
                </div>
                <div>
                    <h4 class="font-semibold mb-4">For Users</h4>
                    <% if (!user) { %>
                        <a href="/user/login" class="block hover:text-white text-sm text-gray-400">Login</a>
                        <a href="/user/signup" class="block hover:text-white text-sm text-gray-400">Register</a>
                        <% } else { %>
                            <a href="/user/profile" class="block hover:text-white text-sm text-gray-400">Profile</a>
                            <a href="/user/orders" class="block hover:text-white text-sm text-gray-400">My Orders</a>
                            <% } %>
                </div>
                <div>
                    <h4 class="font-semibold mb-4">Get App</h4>
                    <a href="#" class="block hover:text-white text-sm text-gray-400">iOS App</a>
                    <a href="#" class="block hover:text-white text-sm text-gray-400">Android App</a>
                </div>
            </div>

            <div class="border-t border-gray-800 mt-12 pt-8 flex items-center justify-between">
                <p class="text-gray-400">Â© 2025 NextCart.</p>
                <span class="text-gray-400">English</span>
            </div>
        </div>
    </footer>

    <!-- Cart Modal -->
    <% if (user) { %>
        <div id="cart-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
            <div class="fixed right-0 top-0 h-full w-96 bg-white shadow-xl transform translate-x-full transition-transform duration-300"
                id="cart-sidebar">
                <div class="p-6 h-full flex flex-col">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-lg font-semibold">Shopping Cart</h2>
                        <button onclick="toggleCart()" class="text-gray-400 hover:text-gray-600">
                            <i class="fas fa-times text-xl"></i>
                        </button>
                    </div>
                    <div id="cart-items" class="flex-1 overflow-y-auto space-y-4 mb-6"></div>
                    <div class="border-t pt-4">
                        <div class="flex justify-between text-lg font-semibold mb-4">
                            <span>Total:</span>
                            <span id="cart-total">$0.00</span>
                        </div>
                        <button class="w-full bg-blue-600 text-white py-3 rounded-lg hover:bg-blue-700 mb-2"
                            onclick="goToCheckout()">
                            Checkout
                        </button>
                        <button class="w-full border border-gray-300 py-3 rounded-lg hover:bg-gray-50"
                            onclick="toggleCart()">
                            Continue Shopping
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <% } %>

            <!-- Scripts -->

            <script src="/javascript/script.js"></script>

</body>

</html>