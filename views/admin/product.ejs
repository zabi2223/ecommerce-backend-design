<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NextCart - Manage Product</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>

<body class="bg-gray-50 flex flex-col min-h-screen">

    <!-- Header -->
    <header class="bg-white shadow-sm border-b">
        <div class="flex items-center justify-between px-6 py-4 relative">
            <a href="/admin"
                class="flex items-center bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold py-2 px-4 rounded-lg shadow-md transition duration-300">
                <i class="fas fa-arrow-left mr-2"></i> Back
            </a>
            <h2 class="absolute left-1/2 transform -translate-x-1/2 text-2xl sm:text-3xl font-extrabold text-gray-700">
                Manage Products
            </h2>
        </div>
    </header>

    <!-- Success/Error Message -->
    <% if (message) { %>
        <div id="alert-message"
            class="<%= type==='success' ? 'bg-green-200 text-green-800' : 'bg-red-200 text-red-800' %> px-4 py-2 rounded mx-6 my-4">
            <%= message %>
        </div>
        <% } %>

            <!-- Main Content -->
            <main class="flex-grow flex flex-col md:flex-row justify-center items-start px-6 py-10 gap-10">

                <!-- Left: Add/Edit Form -->
                <div class="bg-white p-6 rounded-2xl shadow-lg w-full md:w-1/3 border border-gray-200">
                    <h3 class="text-xl font-semibold text-gray-700 mb-6">
                        <%= editProduct ? "Edit Product" : "Add Product" %>
                    </h3>
                    <form
                        action="<%= editProduct ? '/admin/product/update/' + editProduct._id : '/admin/product/add' %>"
                        method="POST" class="space-y-4" enctype="multipart/form-data">

                        <div>
                            <label class="block text-gray-600 font-medium mb-1">Name</label>
                            <input type="text" name="name" value="<%= editProduct ? editProduct.name : '' %>"
                                class="w-full border px-3 py-2 rounded-lg" required>
                        </div>
                        <div>
                            <label class="block text-gray-600 font-medium mb-1">Brand</label>
                            <input type="text" name="brand" value="<%= editProduct ? editProduct.brand : '' %>"
                                class="w-full border px-3 py-2 rounded-lg" required>
                        </div>

                        <div>
                            <label class="block text-gray-600 font-medium mb-1">Description</label>
                            <textarea name="description" class="w-full border px-3 py-2 rounded-lg"
                                required><%= editProduct ? editProduct.description : '' %></textarea>
                        </div>

                        <div>
                            <label class="block text-gray-600 font-medium mb-1">Price</label>
                            <input type="number" name="price" value="<%= editProduct ? editProduct.price : '' %>"
                                class="w-full border px-3 py-2 rounded-lg" min="0" required>
                        </div>

                        <div>
                            <label class="block text-gray-600 font-medium mb-1">Stock</label>
                            <input type="number" name="stock" value="<%= editProduct ? editProduct.stock : '' %>"
                                class="w-full border px-3 py-2 rounded-lg" min="0" required>
                        </div>

                        <div>
                            <label class="block text-gray-600 font-medium mb-1">Category</label>
                            <select name="category" class="w-full border px-3 py-2 rounded-lg" required>
                                <option value="">Select Category</option>
                                <% categories.forEach(cat=> { %>
                                    <option value="<%= cat._id %>" <%=editProduct && editProduct.category &&
                                        ((editProduct.category._id ? editProduct.category._id.toString() :
                                        editProduct.category.toString())===cat._id.toString() ? 'selected' : '' ) %>>
                                        <%= cat.name %>
                                    </option>
                                    <% }) %>
                            </select>
                        </div>

                        <div>
                            <label class="block text-gray-600 font-medium mb-1">Product Image</label>
                            <input type="file" name="productPic" class="w-full border px-3 py-2 rounded-lg">
                            <% if (editProduct && editProduct.productPic && editProduct.productPic.data) { %>
                                <img src="data:<%= editProduct.productPic.contentType %>;base64,<%= Buffer.from(editProduct.productPic.data).toString('base64') %>"
                                    class="mt-2 w-32 h-32 object-cover rounded" alt="Product Image">
                                <% } %>
                        </div>

                        <button type="submit"
                            class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 rounded-lg shadow-md transition duration-300">
                            <%= editProduct ? "Update" : "Save" %>
                        </button>
                    </form>
                </div>

                <!-- Right: Table -->
                <div class="bg-white p-6 rounded-2xl shadow-lg w-full md:w-2/3 border border-gray-200 overflow-x-auto">
                    <h3 class="text-xl font-semibold text-gray-700 mb-6">All Products</h3>
                    <table class="w-full border border-gray-200 text-center">
                        <thead class="bg-gray-100">
                            <tr>
                                <th class="py-3 px-4 border-b text-gray-600 font-semibold">#</th>
                                <th class="py-3 px-4 border-b text-gray-600 font-semibold">Name</th>
                                <th class="py-3 px-4 border-b text-gray-600 font-semibold">Brand</th>
                                <th class="py-3 px-4 border-b text-gray-600 font-semibold">Price</th>
                                <th class="py-3 px-4 border-b text-gray-600 font-semibold">Stock</th>
                                <th class="py-3 px-4 border-b text-gray-600 font-semibold">Category</th>
                                <th class="py-3 px-4 border-b text-gray-600 font-semibold">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach((p, index)=> { %>
                                <tr class="border-b hover:bg-gray-50">
                                    <td class="py-3 px-4">
                                        <%= index + 1 %>
                                    </td>
                                    <td class="py-3 px-4">
                                        <%= p.name %>
                                    </td>
                                    <td class="py-3 px-4">
                                        <%= p.brand %>
                                    </td>
                                    <td class="py-3 px-4">
                                        <%= p.price %>
                                    </td>
                                    <td class="py-3 px-4">
                                        <%= p.stock %>
                                    </td>
                                    <td class="py-3 px-4">
                                        <%= p.category ? p.category.name : "N/A" %>
                                    </td>
                                    <td class="py-3 px-4 flex justify-center gap-3">
                                        <a href="/admin/product/edit/<%= p._id %>"
                                            class="bg-yellow-400 hover:bg-yellow-500 text-white px-3 py-1 rounded-lg">
                                            <i class="fas fa-pen"></i>
                                        </a>
                                        <form action="/admin/product/delete/<%= p._id %>" method="POST" class="inline">
                                            <button type="submit"
                                                class="bg-red-500 hover:bg-red-600 text-white px-3 py-1 rounded-lg"
                                                onclick="return confirm('Are you sure?')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                <% }) %>
                        </tbody>
                    </table>
                </div>

            </main>

            <script>
                const alertBox = document.getElementById('alert-message');
                if (alertBox) {
                    setTimeout(() => {
                        alertBox.classList.add('transition', 'duration-500', 'opacity-0');
                        setTimeout(() => alertBox.remove(), 500);
                    }, 3000);
                }
            </script>

</body>

</html>